{
    "name": "QuizApp Dev Container",
    "image": "mcr.microsoft.com/devcontainers/dotnet:10.0",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest",
            "enableNonRootDocker": "true",
            "moby": "true"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-azuretools.vscode-docker",
                "ms-mssql.mssql"
            ]
        }
    },
    "forwardPorts": [
        5224,
        1433
    ],
    "postCreateCommand": "dotnet restore && dotnet tool install -g dotnet-ef",
    "remoteUser": "vscode"
}